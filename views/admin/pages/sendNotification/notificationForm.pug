extends ../../layout/default

block main
    h1 Thông Báo
    if message
        p.success #{message}
    form(action="/send-notification/send", method="POST")
        label(for="title") Tiêu Đề:
        input#title(type="text", name="title", required=true)
        
        label(for="body") Nội Dung:
        textarea#body(name="body", required=true)
        
        button(type="submit") Gửi Thông Báo
